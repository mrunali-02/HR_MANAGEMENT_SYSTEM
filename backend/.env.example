## Database
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASS=
DB_NAME=hr_management

## Server
PORT=3001
CORS_ORIGIN=http://localhost:3000
NODE_ENV=development
LOG_LEVEL=info

## Authentication
BCRYPT_SALT_ROUNDS=10
TOKEN_EXPIRY_HOURS=24
ENABLE_RATE_LIMIT=false
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=10

## Optional Admin Bootstrap (set before running migrations)
ADMIN_EMAIL=
ADMIN_PASSWORD=
ADMIN_NAME=Administrator

## Google OAuth (optional)
ENABLE_GOOGLE_OAUTH=false
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_CALLBACK_URL=http://localhost:3001/api/auth/google/callback

## SMTP / Email
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_SECURE=false
EMAIL_FROM=no-reply@example.com

## Attendance / Geo Settings
DEFAULT_OFFICE_LAT=
DEFAULT_OFFICE_LNG=
DEFAULT_ALLOWED_RADIUS_M=200

## Security
ENABLE_TOTP=false

